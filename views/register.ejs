<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<!-- Head -->
<%- include('parciales/head') %>
	<!-- Head -->

	<body class="reg">
		<!-- Header -->
		<%- include('parciales/header') %>
		<!-- /Header -->

		<!-- Registracion -->
		<div class="container products-wrapper">
			<div class="row">
				<section class="caja-registro">
					<section class="registro">
						<h2 class="products-title"> <i class="far fa-address-card"></i>     Registrate     <i class="far fa-address-card"></i></h2>
			</div>
			<!-- Formulario -->
			<h2 class="col-12">

				<% if (locals.errors) { %>
					<p class="Alerta" ><%= locals.errors.message %> </p>
			  <% } %>

				<form class="register-form" action="/users/register" method="POST" enctype="multipart/form-data">
					<article class="email">
						

					  
						<label for="email">Email:</label>
						<input type="email" name="email" placeholder="email" id="email">
					</article>

					<article class="usuario">
						<label for="usuario">Nombre de usuario:</label>
						<input type="name" name="name" placeholder="name" id="name">
					</article>

					<article class="contraseña">
						<label for="contraseña">Contraseña:</label>
						<input type="password" name="password" placeholder="password" id="password">

					</article>

					<article class="nacimiento">
						<label for="fecha">Fecha de nacimiento:</label>
						<input type="date" name="date" placeholder="date" id="date">
					</article>

					<article class="enviar">
						<button type="text" class="form-input">Enviar</button>
			
						</article>


				</form>
				</section>
			</h2>


			<!-- footer -->
			<%- include('parciales/footer') %> 
			<!-- /footer -->
	</body>

</html>