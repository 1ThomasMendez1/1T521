<!DOCTYPE html>
<html lang="es">
<!-- Head -->
<%- include('parciales/head') %>
	<!-- Head -->

	<body>
		<!-- Header -->
		<%- include('parciales/headerLog') %>
		<!-- /Header -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Editar mi perfil</h2>
				</div>
				<!-- Show the "ultimos" products -->
				<h2 class="col-12">
					<form action="/profileEdit/<%= info.id %>" method="POST" enctype="multipart/form-data">
						<article class="email">
							<label for="email">Email:</label>
							<input placeholder="<%=info.email%>" type="email" name="email">
						</article>

						<article class="usuario">
							<label for="usuario">Nombre de usuario:</label>
							<input placeholder="<%=info.username%>" type="text" name="usuario">
						</article>

						<article class="contrase単a">
							<label for="contrase単a">Contrase単a:</label>
							<input placeholder="<%=info.password%>" type="contrase単a" name="">
						</article>

						<article class="nacimiento">
							<label for="fecha">Fecha de nacimiento:</label>
							<input placeholder="<%=info.date%>" type="number" name="fechaNacimiento">
						</article>


						<article class="foto">
							<label for="foto">Foto de perfil:</label> <input
								accept="image/jpg, image/jpeg, image/png, image/webp, image/JPG, image/JPEG, image/PNG, image/WEBP"
								type="file" multiple="" autocomplete="off" value="<%=info.image%>" name="imgPerfil">
								</article>

								<button class="form-input" type="submit">Guardar cambios</button>	
							

						</article>
					</form>
				</h2>


				<!-- footer -->
				<%- include('parciales/footer') %>
				<!-- /footer -->
	</body>

</html>