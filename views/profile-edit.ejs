<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./parciales/head') %>
<body>
	<!-- Header -->
	<% if(locals.user){ %>

        <%- include('./parciales/headerLog', {info: locals.user}) %>
      <% } else {%>
        <%- include('./parciales/header') %>
      <% }%>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar Perfil</h2>
			</div>
        </div>

		<form class="formulario" action="/users/profile" enctype="multipart/form-data" method="POST"> 
            <div class="label-input">
                <label for="email" class="form-label">Email</label>
                <input name="email" value="<%=info.email%>" class = "border" type="email" placeholder=" example@email.com" class="email">
            </div>
            <div class="label-input">
                <label for="user" class="form-label">Usuario</label>
                <input name="username" value="<%=info.username%>"  class = "border" type="text" >
            </div>
            <div class="label-input">
                <label for="password" class="form-label">Contraseña</label>
                <input name="password" value=""class = "border" type="password" placeholder=" mín. 8 caracteres" class="password">
            </div>
            <div class="label-input">
                <label for="form-date">Fecha de nacimiento</label>
                <input name="date" value="<%=info.date%>" class = "border" type="date" class="form-date">
            </div>

            <div class="label-input">
                <label for="form-file">Foto de perfil</label>
                <input name="image" value="<%=info.image%> " type="file" class="form-file">
            </div>
			<input type="hidden" name="id" value="<%=info.id%>">
            <input type="hidden" name="createdAt" value="<%=info.createdAt%>">

            <button type="submit" class="btn btn-primary">Editar</button>
        </form>
	</div>
    
	<!-- footer -->
	<%- include('./parciales/footer') %>
	<!-- /footer -->
</body>

</html>