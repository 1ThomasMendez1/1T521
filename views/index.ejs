<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<!-- Head -->
<%- include('parciales/head') %>
<!-- Head -->
<body>

	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('parciales/headerLog', {info: locals.user}) %>
      <% }else { %>
		<%- include('parciales/header') %>
      <% } %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			
			<!-- Show the "ultimos" products -->
			<% for(let i =0 ;i < 4; i++) {  %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="products/<%= info[i].id%>">
							<figure class="product-box_image">
								<img src="<%= info[i].image%>" alt="<%= info.model %>">
							</figure>
							<article class="product-box_data">
								<h2> <%= info[i].model %> </h2>
								<p> <%= `${info[i].brand} - ${info[i].year} - ${info[i].color} - Talle: ${info[i].size} `  %></p>
								<p>Comentarios: <%= info[i].comentarios.length %> </p>
								<div>
									<a href="/users/profile/<%= info[i].owner.id %>">
									<img class="userpfp" src="<%= info[i].owner.image %>" alt="foto de perfil de <%= info[i].owner.username %>">
								</a>
									<strong class="nombreproducto"> <a href="/users/profile/<%= info[i].owner.id %>"> <%= info[i].owner.username %>  </a> </strong>
								</div>
							</article>
						</a>
					</section>
				</div>
				<% } %>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
<!-- Más comentados -->
<div class="container products-wrapper">
	<div class="row">
		<div class="col-12">
			<h2 class="products-title">Mas comentados</h2>
		</div>
		<% for(let i = 0; i < 4; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="products/<%= info[i].id%>">
						<figure class="product-box_image">
							<img src="<%= info[i].image%>" alt="<%= info.model %>">
						</figure>
						<article class="product-box_data">
							<h2> <%= info[i].model %> </h2>
							<p> <%= `${info[i].brand} - ${info[i].year} - ${info[i].color} - ${info[i].size}  ${info[i].model} `  %></p>
							<p>Comentarios: <%= info[i].comentarios.length %> </p>
							<div class="username-pfp">
								<a href="/users/profile/<%= info[i].owner.id %>">
								<img class="userpfp" src="<%= info[i].owner.image %> " alt="foto de perfil de <%= info[i].owner.username %>">
							</a>
								<strong class="nombreproducto"> <a href="/users/profile/<%= info[i].owner.id %>"> <%= info[i].owner.username %>  </a> </strong>
							</div>
						</article>
					</a>
				</section>
			</div>
			<% } %>
			
	</div>
</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('parciales/footer') %>
	<!-- /footer -->
</body>	
</html>